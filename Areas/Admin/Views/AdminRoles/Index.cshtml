@model IEnumerable<WebMarket.Models.Role>

@{
    ViewData["Title"] = "Danh sách quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-action="Index" asp-area="Admin" asp-controller="Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">@ViewData["Title"]</span>
        </nav>
    </div>
</div>

<div class="table-responsive">
    <a class="btn btn-primary m-r-5"
       asp-action="Create" asp-area="Admin" asp-controller="AdminRoles">Thêm mới</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên quyền</th>
                <th scope="col">Mô tả</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.RoleId</th>
                        <td>@item.RoleName</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-primary m-r-5"
                               asp-action="Details" asp-route-id="@item.RoleId" asp-area="Admin" asp-controller="AdminRoles">Xem</a>
                            <a class="btn btn-info m-r-5"
                               asp-action="Edit" asp-route-id="@item.RoleId" asp-area="Admin" asp-controller="AdminRoles">Sửa</a>
                            <a class="btn btn-danger m-r-5"
                               asp-action="Delete" asp-route-id="@item.RoleId" asp-area="Admin" asp-controller="AdminRoles">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>