@model WebMarket.Models.Role

@{
    ViewData["Title"] = "Xác nhận xóa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-action="Index" asp-area="Admin" asp-controller="Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-action="Index" asp-area="Admin" asp-controller="AdminRoles">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">@ViewData["Title"]</span>
        </nav>
    </div>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td class="text-dark font-weight-semibold">@Model.RoleId</td>
                </tr>
                <tr>
                    <td>Tên quyền:</td>
                    <td>@Model.RoleName</td>
                </tr>
                <tr>
                    <td>Mô tả:</td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td>
                        <form asp-action="Delete" asp-route-id="@Model.RoleId">
                            <input type="hidden" asp-for="RoleId" />
                            <input type="submit" value="Delete" class="btn btn-danger m-r-5" />
                        </form>
                    </td>
                    <td>
                        <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>